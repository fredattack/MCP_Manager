APP_NAME="MCP Manager"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database - DigitalOcean Managed PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=your-db-cluster.db.ondigitalocean.com
DB_PORT=25060
DB_DATABASE=mcp_manager
DB_USERNAME=doadmin
DB_PASSWORD=
DB_SSLMODE=require

# Session - Use Redis for better performance
SESSION_DRIVER=redis
SESSION_LIFETIME=30
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.your-domain.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict

# Broadcasting & Queue
BROADCAST_CONNECTION=redis
QUEUE_CONNECTION=redis

# File Storage - DigitalOcean Spaces
FILESYSTEM_DISK=spaces
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=mcp-manager

# Cache - Redis for performance
CACHE_STORE=redis
CACHE_PREFIX=mcp_manager_cache

# Redis - DigitalOcean Managed Redis
REDIS_CLIENT=phpredis
REDIS_HOST=your-redis-cluster.db.ondigitalocean.com
REDIS_PASSWORD=
REDIS_PORT=25061
REDIS_DB=0
REDIS_CACHE_DB=1

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (optional for S3 backup)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# Frontend Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_API_URL="${APP_URL}"

# MCP Server Configuration (REQUIRED - No defaults for security)
MCP_SERVER_URL=
MCP_SERVER_USER=
MCP_SERVER_PASSWORD=
MCP_API_TOKEN=
MCP_DEFAULT_PAGE_ID=

# Google OAuth (for Gmail/Calendar)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/integrations/google/callback"

# Security Settings
SECURE_HEADERS_ENABLED=true
RATE_LIMIT_ENABLED=true
FORCE_HTTPS=true

# Monitoring
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Backup Settings
BACKUP_ENABLED=true
BACKUP_DESTINATION=spaces
BACKUP_NOTIFICATION_EMAIL="${MAIL_FROM_ADDRESS}"